{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "defaultProject": "spear",
  "projects": {
    "spear": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/spear",
      "sourceRoot": "projects/spear/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-architects/native-federation:build",
          "options": {
            "target": "spear:esbuild:development"
          },
          "configurations": {
            "production": {
              "target": "spear:esbuild:production"
            },
            "development": {
              "target": "spear:esbuild:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "esbuild": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/spear",
            "tsConfig": "projects/spear/tsconfig.app.json",
            "index": "projects/spear/src/index.html",
            "polyfills": [
              "projects/spear/src/polyfills.ts"
            ],
            "assets": [
              "projects/spear/src/favicon.ico",
              "projects/spear/src/assets",
              "projects/spear/src/staticwebapp.config.json",
              {
                "glob": "federation.manifest.json",
                "input": "projects/spear/src/assets",
                "output": "/assets/"
              },
              {
                "glob": "es-module-shims.js",
                "input": "node_modules/es-module-shims/dist",
                "output": "/"
              }
            ],
            "styles": [
              "projects/spear/src/styles.scss",
              "projects/spear/src/theme.scss",
              "node_modules/prismjs/themes/prism-okaidia.css"
            ],
            "scripts": [
              "node_modules/marked/lib/marked.umd.js",
              "node_modules/prismjs/prism.js",
              "node_modules/prismjs/components/prism-json.min.js",
              "node_modules/prismjs/components/prism-typescript.min.js",
              "node_modules/prismjs/components/prism-css.min.js"
            ],
            "browser": "projects/spear/src/main.ts", 
            "extractLicenses": false,
            "sourceMap": true,
            "optimization": false,
            "define": {
              "process": "{\"env\": {\"NODE_ENV\": \"development\"}}", 
              "process.env.NODE_ENV": "\"development\""
            }
          },
          "configurations": {
            "production": {
              "outputHashing": "all",
              "extractLicenses": true,
              "optimization": true,
              "sourceMap": false,
              "fileReplacements": [
                {
                  "replace": "projects/spear/src/environments/environment.ts",
                  "with": "projects/spear/src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "outputHashing": "all",
              "extractLicenses": true,
              "optimization": false,
              "sourceMap": true,
              "fileReplacements": [
                {
                  "replace": "projects/spear/src/environments/environment.ts",
                  "with": "projects/spear/src/environments/environment.dev.ts"
                }
              ]
            }
          },
          "defaultConfiguration": "development"
        },
        "serve": {
          "builder": "@angular-architects/native-federation:build",
          "options": {
            "target": "spear:serve-original:development",
            "tsConfig": "projects/spear/tsconfig.app.json",
            "rebuildDelay": 0,
            "dev": true,
            "port": 4000
        },
          "configurations": {
          "production": {
            "dev": false,
            "target": "spear:serve-original:production"
          },
          "development": {
            "target": "spear:serve-original:development"
          }
        },
          "defaultConfiguration": "development"
        },
        "serve-original": {
          "builder": "@angular-devkit/build-angular:dev-server", 
          "options": {
            "port": 4000,
            "buildTarget": "spear:esbuild:development"
          },
          "configurations": {
            "production": {
              "buildTarget": "spear:esbuild:production"
            },
            "development": {
              "buildTarget": "spear:esbuild:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "spear:esbuild:development",
            "outFile": "messages.xlf",
            "format": "xlf"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/spear/src/test.ts",
            "polyfills": "projects/spear/src/polyfills.ts",
            "tsConfig": "projects/spear/tsconfig.spec.json",
            "karmaConfig": "projects/spear/karma.conf.js",
            "assets": [
              "projects/spear/src/favicon.ico",
              "projects/spear/src/assets"
            ],
            "styles": [
              "projects/spear/src/styles.scss"
            ],
            "scripts": []
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "projects/spear/e2e/protractor.conf.js",
            "devServerTarget": "spear:serve"
          },
          "configurations": {
            "development": {
              "devServerTarget": "spear:serve:development"
            },
            "production": {
              "devServerTarget": "spear:serve:production"
            }
          }
        },
        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist/spear-server",
            "main": "projects/spear/src/main.server.ts",
            "tsConfig": "projects/spear/tsconfig.server.json",
            "sourceMap": true,
            "optimization": false,
            "verbose": true,
            "externalDependencies": [
              "@aws-sdk/client-s3",
              "aws-crt"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "projects/spear/src/environments/environment.ts",
                  "with": "projects/spear/src/environments/environment.prod.ts"
                }
              ],
              "sourceMap": true,
              "optimization": true
            },
            "development": {
              "fileReplacements": [
                {
                  "replace": "projects/spear/src/environments/environment.ts",
                  "with": "projects/spear/src/environments/environment.dev.ts"
                }
              ],
              "sourceMap": true,
              "optimization": true
            }
          },
          "defaultConfiguration": ""
        },
        "lambda": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "optimization": false,
            "outputPath": "dist/spear/lambda",
            "main": "projects/spear/src/main.lambda.ts",
            "tsConfig": "projects/spear/tsconfig.lambda.json",
            "externalDependencies": [
              "../server/main"
            ],
            "sourceMap": true
          },
          "configurations": {
            "production": {
              "optimization": true,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "projects/spear/src/environments/environment.ts",
                  "with": "projects/spear/src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": true,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "projects/spear/src/environments/environment.ts",
                  "with": "projects/spear/src/environments/environment.dev.ts"
                }
              ]
            }
          },
          "defaultConfiguration": ""
        },
        "prerender": {
          "builder": "@angular-devkit/build-angular:prerender",
          "options": {
            "browserTarget": "spear:esbuild:development",
            "serverTarget": "spear:server:development",
            "discoverRoutes": false,
            "routesFile": "data/routes.txt"
          },
          "configurations": {
            "development": {
              "browserTarget": "spear:esbuild:development",
              "serverTarget": "spear:server:development"
            },
            "production": {
              "browserTarget": "spear:esbuild:production",
              "serverTarget": "spear:server:production"
            }
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "type": "component"
    },
    "@schematics/angular:directive": {
      "type": "directive"
    },
    "@schematics/angular:service": {
      "type": "service"
    },
    "@schematics/angular:guard": {
      "typeSeparator": "."
    },
    "@schematics/angular:interceptor": {
      "typeSeparator": "."
    },
    "@schematics/angular:module": {
      "typeSeparator": "."
    },
    "@schematics/angular:pipe": {
      "typeSeparator": "."
    },
    "@schematics/angular:resolver": {
      "typeSeparator": "."
    }
  },
  "cli": {
    "analytics": false
  }
}
