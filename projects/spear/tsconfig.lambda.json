/* This file is used for server-side or lambda builds. */
{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc-server",
    
    // FIX for TS5095: Changed from "commonjs" to "es2020". 
    // This setting is compatible with "moduleResolution": "bundler" 
    // (inherited from tsconfig.json) while maintaining a modern Node.js target.
    "module": "es2020",
    
    "types": [
      "node"
    ]
  },
  "files": [
    "src/main.lambda.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "./src/app/app.server.module#AppServerModule"
  }
}
